{
  "manifest_version": 3,
  "name": "Colab Input Notifier",
  "version": "1.0",
  "description": "Turns the colab purple when it requires user input.",

  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png"
  },

  "content_scripts": [
    {
      "matches": ["https://colab.research.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["favicon.ico"],
      "matches": ["https://colab.research.google.com/*"]
    }
  ]
}